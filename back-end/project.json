{
    "$schema": "../node_modules/nx/schemas/project-schema.json",
    "name": "back-end",
    "root": "back-end",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cargo build --release",
                "cwd": "back-end"
            },
            "outputs": [
                "{workspaceRoot}/back-end/target"
            ]
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cargo test",
                "cwd": "back-end"
            }
        },
        "run-node": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cargo run --bin node",
                "cwd": "back-end"
            }
        }
    }
}